<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/bootstrap/css/bootstrap.min.css">
    <title>Nodejs</title>
</head>

<body class="container">
    <%- include('partials/header.ejs') %>
        <%- include('partials/nav.ejs') %>

            <div class="container">
                <center>
                    <h3>Tabla de multiplicar del <%=numero%>
                    </h3>
                </center>
            </div>

            <section class="container-mt-5">
                <center>
                    <div class="container-mt-5">
                        <form action="p01" method="post" class="mb-3">
                            <div class="form-group">
                                <label for="numero" class="form-control mb-3">Numero</label>
                                <input type="text" name="numero" id="numero" class="form-control mb-3" required>
                            </div>

                            <button type="submit" class="btn btn-primary">Enviar</button>
                            <a href="/practica1" class="btn btn-secondary">Limpiar</a>
                        </form>

                        <section class="container-mt-5">
                            <% let res=0;
                            if(numero!=""){
                                for(let i=1;i<=10;i++){
                                    res = i * numero;
                                    %>
                                    <h3><%=numero%>*<%=i%>=<%=res%></h3>
                                    <%
                                }
                            } %>
                        </section>

                    </div>
                </center>
            </section>

            <%- include('partials/footer.ejs') %>
</body>